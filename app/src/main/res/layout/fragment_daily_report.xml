<?xml version="1.0" encoding="utf-8"?>


    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/rounded_bg"
        android:fillViewport="true"
        tools:context=".DailyReportFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dailyReportArrow"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="dailyReportExpand"
                android:src="@drawable/arrow_down" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:text="ID"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/emailTextarea"
                android:layout_width="359dp"
                android:layout_height="44dp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="5sp"
                android:background="@drawable/rectangle"
                android:inputType="text|textMultiLine"
                android:maxLength="500"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10sp"
                android:text="Progress Notes"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/progressNotesTextarea"
                android:layout_width="357dp"
                android:layout_height="163dp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="5sp"
                android:background="@drawable/rectangle"
                android:inputType="text|textMultiLine"
                android:maxLength="500"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20sp"
                android:text="Current Status"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/progressTextCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30sp"
                android:text="0/500"
                android:textAlignment="viewEnd" />

        </LinearLayout>
    </ScrollView>

